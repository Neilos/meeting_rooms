<%- model_class = Membership -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @membership.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organization_id) %>:</strong></dt>
  <dd><%= @membership.organization.name %></dd>
  <% @membership.permission_set.attributes.each do |ability, allowed| %>
    <% unless %w[created_at updated_at id].include? ability %>
      <dt><strong><%= model_class.human_attribute_name(ability) %>:</strong></dt>
      <dd><%= allowed %></dd>
    <% end %>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              :back, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_membership_path(@membership), :class => 'btn' %>
</div>
