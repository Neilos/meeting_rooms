<%- model_class = Membership -%>

<h4>Memberships</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:organization) %></th>
      <th></th>
      <th><%=t '.permissions', :default => t("helpers.permissions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.organization.name %></td>
        <td><%= link_to t(:organization_details),
                      organization_path(membership.organization), 
                      :class => 'btn btn-primary' %></td>
        <td>
          <%= link_to t('.view', :default => t("helpers.links.view")),
                      membership_path(membership), 
                      :class => 'btn btn-default' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_membership_path(membership), 
                      :class => 'btn btn-default' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      membership_path(membership),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>