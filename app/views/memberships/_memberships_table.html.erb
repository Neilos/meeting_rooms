<%- model_class = Membership -%>

<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>

<table class="table table-striped" id="memberships-table">
  <thead>
    <tr>

      <th>
        <%= model_class.human_attribute_name(:member) if @organization %>
        <%= model_class.human_attribute_name(:organization) if @user %>
      </th>
      <th></th>
      <th><%=t '.permissions', :default => t("helpers.permissions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <% if @user %>
          <td><%= membership.organization.name %></td>
          <td><%= link_to t(:organization_details),
                        organization_path(membership.organization), 
                        :class => 'btn btn-primary' %></td>
        <% end %>
        <% if @organization %>
          <td><%= membership.user.name %></td>
          <td><%= link_to t(:user_details),
                      user_path(membership.user), 
                      :class => 'btn btn-primary' %></td>
        <% end %>
        <td>
          <%= link_to t('.view', :default => t("helpers.links.view")),
                      membership_path(membership), 
                      :class => 'btn btn-default' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_membership_path(membership), 
                      :class => 'btn btn-default' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      membership_path(membership),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_membership_path,
            :class => 'btn btn-primary' %>