<%- model_class = Membership -%>

<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>

<table class="table" id="memberships-table">
  <thead>
    <tr>

      <th>
        <%= model_class.human_attribute_name(:member) if @organization %>
        <%= model_class.human_attribute_name(:organization) if @user %>
      </th>
      <th></th>
      <th><%=t '.permissions', :default => t("helpers.permissions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <% if @user %>
          <td><%= membership.organization.name %></td>
          <td><%= link_to t(:organization_details),
                        organization_path(membership.organization), 
                        :class => 'btn btn-primary' %></td>
        <% end %>
        <% if @organization %>
          <td><%= membership.user.name %></td>
          <td><%= link_to t(:user_details),
                      user_path(membership.user), 
                      :class => 'btn btn-primary' %></td>
        <% end %>
        <td>
          <% if @user %>
            <%= link_to t('.view', :default => t("helpers.links.view")),
                        user_membership_path(@user, membership), 
                        :class => 'btn btn-default' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_user_membership_path(@user, membership), 
                        :class => 'btn btn-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        user_membership_path(@user, membership),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
          <% end %>

          <% if @organization %>
            <%= link_to t('.view', :default => t("helpers.links.view")),
                        organization_membership_path(@organization, membership), 
                        :class => 'btn btn-default' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_organization_membership_path(@organization, membership), 
                        :class => 'btn btn-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        organization_membership_path(@organization, membership),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to(t('.new_membership', :default => t("helpers.links.new_membership")),
            new_user_membership_path(@user),
            :class => 'btn btn-primary') if @user %>

<%= link_to(t('.new_membership', :default => t("helpers.links.new_membership")),
            new_organization_membership_path(@organization),
            :class => 'btn btn-primary') if @organization %>