<div class="page-header">
  <h1>Change your password</h1>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.password_field :password, :autofocus => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Change my password", :class => 'btn btn-primary'  %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
