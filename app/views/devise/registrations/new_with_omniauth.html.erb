<div class="page-header">
  <h1>Complete Sign In</h1>
</div>

<%= form_for(@user, :url => complete_user_registration_with_omniauth_path, :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :autofocus => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.password_field :password %>
    </div>
  </div>
  
  <%= hidden_field_tag 'uid', @uid %>

  <%= hidden_field_tag 'provider', @provider %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Complete sign in", :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>

