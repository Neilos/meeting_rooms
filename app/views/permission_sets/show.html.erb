<%- model_class = PermissionSet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:create__organizations) %>:</strong></dt>
  <dd><%= @permission_set.create__organizations %></dd>
  <dt><strong><%= model_class.human_attribute_name(:create__memberships) %>:</strong></dt>
  <dd><%= @permission_set.create__memberships %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              permission_sets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_permission_set_path(@permission_set), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              permission_set_path(@permission_set),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
