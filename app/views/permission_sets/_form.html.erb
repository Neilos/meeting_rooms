<%= form_for @permission_set, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :create__organizations, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :create__organizations, :class => 'checkbox' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :create__memberships, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :create__memberships, :class => 'checkbox' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                permission_sets_path, :class => 'btn' %>
  </div>
<% end %>
